@model SmartLMS.WebUI.Models.CursoViewModel

<div class="item @Html.ViewData["activeItemCSSClass"]">
    <div class="col-md-3 col-sm-4 col-xs-12">
        <a href="@Url.Action("Index", "Aula", new { Id = Model.Id })">
            <figure class="cap-bot">
                <img src="~/Content/img/cursos/@(Model.Imagem ?? "sem-imagem.png")" class="img-responsive">
                <figcaption>
                    <i class="fa fa-graduation-cap"></i> @Model.Nome
                </figcaption>
            </figure>
        </a>
    </div>
</div>
