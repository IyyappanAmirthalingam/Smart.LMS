    <script src="~/Scripts/pace/pace.min.js"></script>
    @{
        string actionName = ViewContext.RouteData.Values["action"].ToString();
        string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    }
    @if (actionName == "Index" && controllerName == "Home")
    {
        <link href="~/content/pace/green-loading-bar.css" rel="stylesheet" />
    }
    else
    {
        <link href="~/content/pace/green-minimal.css" rel="stylesheet" />
    }
        <script>
        if (navigator.serviceWorker.controller) {
            console.log('[smartlms] active service worker found, no need to register');
        } else {
            //Register the ServiceWorker
            navigator.serviceWorker.register('@Parameter.BASE_URL/smartlms-sw.js', {
                scope: '/'
            }).then(function(reg) {
                console.log('Service worker has been registered for scope:'+ reg.scope);
            });
        }

        var SmartLMS = {};
        SmartLMS.api = '@Parameter.BASE_URL';


        </script>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/csscustom")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    <base href="@HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority)@Url.Content("~/")" />
</head>
<body>

    @Html.Action("Header", "User")
    <div class="sidebar-container">
        <div class="container">
            @RenderBody()

        </div>
    </div>

    <footer class="footer footer-black">
        <div class="container">
            <div class="col-sm-3">
                <nav class="pull-left">
                    <ul>
                        <li>
                            Smart 2.0 - LMS
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-sm-9">
                <div class="copyright pull-right">
                    © 2016, made with <i class="fa fa-heart heart"></i> by <a href="http://www.github.com/rcarubbi" target="_blank">Raphael Carubbi</a>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/data")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        SmartLMS.LoggedUserId = '@ViewBag.LoggedUserId';


        (function () {
            var $private = {};

            $(function () {
                $("#talk-to-us-form").on("submit", $private.SendTalkToUs);
            });

            $private.SendTalkToUs = function (e) {
                e.preventDefault();
                $.validator.unobtrusive.parse($(this));

                if ($(this).valid()) {
                    var sendMessageOriginalText = $("#talk-to-us-send-button").text();
                    var sending = $("<img src='@Url.Content("~/Content/Img/loading-white.gif")'><span> Sending</span>");
                    $("#talk-to-us-send-button").html(sending);
                    $("#talk-to-us-send-button").prop('disabled', true);
                    $.ajax({
                        url: this.action,
                        type: this.method,
                        data: $(this).serialize(),
                        success: function (result) {
                            if (result.Success)
                                SmartLMS.App.toastr['success']('Your message has been sent!', 'Talk to us');
                            else
                                SmartLMS.App.toastr['error']('An error has been ocurried. Please try again    ', 'Talk to us');


                            $("#talk-to-us-name-textbox").val("");
                            $("#talk-to-us-email-textbox").val("");
                            $("#talk-to-us-messaeg-textbox").val("");
                            $("#talk-to-us-send-button").text(sendMessageOriginalText);
                            $("#talk-to-us-send-button").prop('disabled', false);
                        }
                    });
                }
            };
        }());

    </script>
    @RenderSection("scripts", required: false)

    @Html.Partial("_Alert")
    @Html.Partial("_About")
    @Html.Partial("_TalkToUs", new TalkToUsViewModel())
   
</body>
</html>
