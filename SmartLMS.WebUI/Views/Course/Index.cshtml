@using SmartLMS.Domain.Entities
@model SmartLMS.WebUI.Models.SubjectViewModel
@{
    ViewBag.Title = "Index of " + Parameter.SUBJECT + " - " + Model.Name;
}

<div class="col-md-8">
    <div id="subject-index-container">
        @Html.Partial("_SubjectIndex", Model)
    </div>
</div>
<div class="col-md-4">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">See also other @(Parameter.SUBJECT_PLURAL.ToLower()) for this @Parameter.KNOWLEDGE_AREA.ToLower()</h3>
        </div>
        <div class="panel-body panel-body-no-margin">
            @{
                string label = string.Concat("Select a ", Parameter.SUBJECT.ToString());
            }
            @Html.DropDownList("otherSubjects", ViewBag.OtherSubjects as SelectList, label, new { @class= "form-control dropdownjs" })
        </div>
    </div>
 </div>
@section scripts {
    <script>
        (function () {
            $(function () {
                var activeOption = $('<option>', {
                    value: '@Model.Id',
                    text: '@Html.Raw(Model.Name)'
                });

                $("#otherSubjects").on("dropdownjs.change", function () {
                    var selectedItem = $(this).find("option:selected");
                    var id = selectedItem.val();
                    var text = selectedItem.text();
                    if (id !== "")
                    {
                        $(this).append(activeOption);
                        activeOption = $('<option>', {
                            value: id,
                            text: text
                        });

                        selectedItem.remove();
                        $(this).dropdownjs();

                        $("#subject-index-container").fadeOut("fast", null, function () {

                            $("#subject-index-container").load(SmartLMS.api + "Course/SubjectIndex/" + id, null,
                                function () {
                                    $("#subject-index-container").fadeIn();
                                    $.material.init();
                                });
                        });
                    }
                });
            });
        }());

    </script>    
}