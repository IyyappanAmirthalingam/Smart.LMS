@model SmartLMS.WebUI.Models.EsqueciMinhaSenhaViewModel

@{
    ViewBag.Title = "EsqueciMinhaSenha";
    Layout = "~/Views/Autenticacao/_Layout.cshtml";
}


<div class="panel panel-primary card-signup">
    <div class="panel-heading">
        <div class="text-center panel-title">Esqueci minha senha</div>
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                @using (Html.BeginForm("EsqueciMinhaSenha", "Autenticacao", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.EditorFor(x => x.Email, new { htmlAttributes = new { PlaceHolder = "Digite seu endereço de Email do cadastro" } })
                    </div>
                        <div class="form-group">
                            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger text-danger" })
                            @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
                            {
                                <div class="alert alert-success">
                                    @ViewBag.Mensagem
                                </div>
                            }
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-3">
                                    <input type="submit" name="login-submit" id="login-submit" class="btn btn-simple btn-primary" value="Enviar senha">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="text-center">
                                        @Html.ActionLink("Voltar ao login", "Login", null, new { @class = "forgot-password" })
                                    </div>
                                </div>
                            </div>
                        </div>

                }
            </div>
        </div>
    </div>
</div>
