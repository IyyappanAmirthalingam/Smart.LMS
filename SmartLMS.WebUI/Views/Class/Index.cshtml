@using SmartLMS.Domain.Entities
@model SmartLMS.WebUI.Models.CourseViewModel
@{
    ViewBag.Title = Parameter.COURSE  + " index - " + Model.Name;
}
<div class="col-md-8">
   <div id="course-index-container">
       @Html.Partial("_CoursePanel", Model)
   </div>
</div>
<div class="col-md-4">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">See also other @(Parameter.COURSE_PLURAL.ToLower()) for this @Parameter.SUBJECT.ToLower()</h3>
        </div>
        <div class="panel-body panel-body-no-margin">
            @{ 
                string label = string.Concat("Select a ", Parameter.COURSE.ToString());
            }
            @Html.DropDownList("otherCourses", ViewBag.OtherCourses as SelectList, label, new { @class = "form-control dropdownjs" })
        </div>
    </div>
</div>
 
@section scripts {
    <script>
        (function () {
            $(function () {
                var activeOption = $('<option>', {
                    value: '@Model.Id',
                    text: '@Html.Raw(Model.Name)'
                });

                $("#otherCourses").on("dropdownjs.change", function () {
                    var selectedItem = $(this).find("option:selected");
                    var id = selectedItem.val();
                    var text = selectedItem.text();
                    if (id !== "")
                    {
                        $(this).append(activeOption);
                        activeOption = $('<option>', {
                            value: id,
                            text: text
                        });

                        selectedItem.remove();
                        $(this).dropdownjs();

                        $("#course-index-container").fadeOut("fast", null, function () {
                            $("#course-index-container").load(SmartLMS.api + "Class/CoursePanel/" + id, null,
                                function () {
                                    $("#course-index-container").fadeIn();
                                    $.material.init();
                                });
                        });
                    }
                });
            });
        }());

    </script>
}




